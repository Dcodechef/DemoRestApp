<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp" android:id="@+id/card_chat_list_row"
    card_view:cardCornerRadius="1dp"
    style="@style/card_style" android:layout_margin="0dp"
    tools:ignore="MissingPrefix">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/row_chat_list"
    android:layout_height="wrap_content" android:padding="10dp">
<ImageView
    android:layout_width="@dimen/img_width_height"
    android:layout_height="@dimen/img_width_height" android:id="@+id/img_chat_user"/>
    <LinearLayout android:layout_weight="1" android:layout_marginLeft="10dp" android:orientation="vertical"
        android:layout_width="0dp" android:gravity="center_vertical" android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/txt_sender_name"
            style="@style/text_normal_14dp" android:textStyle="bold"
            android:layout_width="wrap_content" android:text="Adam"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/txt_time"
            style="@style/text_normal_11dp"
            android:textColor="@color/light_grey" android:text="Today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView android:text="2" android:textColor="@color/white"
        style="@style/text_normal_11dp"
android:id="@+id/txt_unread"
        android:background="@drawable/bg_oval_orange"  android:paddingTop="2dp" android:paddingBottom="2dp"
        android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_marginLeft="20dp" android:layout_marginRight="10dp"
        android:layout_width="wrap_content" android:layout_gravity="center_vertical" android:gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout></android.support.v7.widget.CardView>