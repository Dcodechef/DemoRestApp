<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_chat_list_row"
    style="@style/card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:elevation="4dp"
    card_view:cardCornerRadius="1dp"
    tools:ignore="MissingPrefix">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_chat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_chat_user"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_sender_name"
                style="@style/text_heading_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="18dp"
                android:text="Adam"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_inquiry_type"
                style="@style/text_normal_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Inquiry - Subject" android:textColor="@color/light_grey"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_time"
                style="@style/text_normal_11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="@color/light_grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_unread"
            style="@style/text_normal_11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_oval_orange"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="2"
            android:textColor="@color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>