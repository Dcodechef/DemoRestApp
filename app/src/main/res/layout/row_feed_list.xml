<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    card_view:cardCornerRadius="1dp"
    style="@style/card_style"
    tools:ignore="MissingPrefix">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView android:layout_gravity="top"
                android:id="@+id/img_item_big_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_icon_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_play_circle_outline_white_48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_company_icon"
                    android:layout_width="@dimen/row_icon_image_w_h"
                    android:layout_height="@dimen/row_icon_image_w_h"
                    android:layout_margin="5dp" />

                <TextView
                    android:id="@+id/txt_heading"
                    style="@style/text_heading_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/items_margin"
                    android:text="Sample text" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/txt_description"
            style="@style/text_normal_14dp"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/items_margin"
            android:layout_marginLeft="@dimen/row_aligned_text_margin_left"
            android:layout_marginRight="@dimen/items_margin"
            android:text="Sample text" />

        <LinearLayout
            android:id="@+id/lnr_bottom_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <include layout="@layout/view_row_options"></include>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>