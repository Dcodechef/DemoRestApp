<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_tutorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator_skip_intro"
        android:layout_width="match_parent"
        app:ci_width="8dp"
        app:ci_height="8dp"
        app:ci_animator="@animator/indicator_no_animator"
        app:ci_drawable="@drawable/primary_color_circle"
        app:ci_drawable_unselected="@drawable/grey_circle"
        android:layout_height="48dp" />

    <Button
        android:id="@+id/btn_skip_intro"
        style="@style/text_normal_14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_grey_dark"
        android:text="@string/skip"
        android:textColor="@color/white" />
</LinearLayout>