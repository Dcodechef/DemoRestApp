<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout android:id="@+id/chat_sender_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginRight="90dp">
    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_width="@dimen/img_width_height" android:layout_margin="10dp"
            android:layout_height="@dimen/img_width_height" android:id="@+id/chat_user_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp" android:id="@+id/card_chat_txt_container_sender"
                card_view:cardCornerRadius="1dp"
                style="@style/card_style"
                tools:ignore="MissingPrefix">
        <LinearLayout android:layout_marginLeft="10dp"
            android:layout_width="match_parent" android:orientation="vertical" android:layout_marginRight="10dp" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:layout_height="wrap_content" android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp" android:layout_gravity="left" android:layout_weight="1"
                    android:layout_height="wrap_content" style="@style/text_normal_11dp"
                    android:id="@+id/txt_sender_name" android:text="Adam" android:layout_marginRight="10dp"
                    android:textColor="@color/light_grey"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_gravity="left"
                    android:layout_height="wrap_content" style="@style/text_normal_11dp"
                    android:id="@+id/txt_sender_time" android:text="1 hour ago"
                    android:textColor="@color/light_grey"/>
            </LinearLayout>
            <TextView android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                android:layout_width="match_parent" style="@style/text_normal_14dp" android:text="Consectetur adipising elit do sed?"
                android:layout_height="wrap_content" />
        </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp" android:id="@+id/card_chat_image_download_views"
                card_view:cardCornerRadius="1dp"
                style="@style/card_style"
                tools:ignore="MissingPrefix">
        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView android:src="@mipmap/dummy" android:padding="10dp"
                android:layout_width="match_parent" android:id="@+id/img_chat_sent_image" android:adjustViewBounds="true"
                android:layout_height="wrap_content" android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="match_parent" android:text="Lorem Ipsum (3.01 MB)" android:padding="5dp" android:id="@+id/txt_sender_sent_image_caption"
                android:layout_height="wrap_content" style="@style/text_normal_14dp" android:textColor="@color/dark_orange"/>
            <ImageView android:layout_marginTop="10dp"
                android:layout_width="match_parent" android:background="@color/grey"
                android:layout_height="1dp" />
            <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content" android:orientation="horizontal">
           <LinearLayout android:padding="4dp"
               android:layout_width="0dp" android:layout_weight="1" android:gravity="center"
               android:layout_height="wrap_content" android:id="@+id/lnr_chat_download_image">
               <ImageView
                   android:layout_width="18dp" android:background="@mipmap/ic_get_app_black_24dp"
                   android:layout_height="18dp" android:id="@+id/img_icon_download"/>
               <TextView
                   android:layout_width="wrap_content" android:layout_marginLeft="7dp"
                   android:layout_height="wrap_content" android:text="@string/download"/>
           </LinearLayout>
           <ImageView
               android:layout_width="1dp" android:background="@color/grey"
               android:layout_height="match_parent" />
           <LinearLayout android:gravity="center" android:padding="4dp"
               android:layout_width="0dp" android:layout_weight="1"
               android:layout_height="wrap_content" android:id="@+id/lnr_chat_view_image">
               <ImageView
                   android:layout_width="18dp" android:background="@mipmap/ic_visibility_black_24dp"
                   android:layout_height="18dp" android:id="@+id/img_icon_view"/>
               <TextView android:layout_marginLeft="7dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:text="@string/view"/>
           </LinearLayout>
       </LinearLayout>
        </LinearLayout></android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>


    <FrameLayout android:id="@+id/chat_receiver_msg"
        android:layout_width="match_parent" android:layout_marginRight="10dp"
        android:layout_height="wrap_content" android:layout_marginLeft="90dp">
        <LinearLayout
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp" android:id="@+id/card_chat_txt_container_receiver"
                    card_view:cardCornerRadius="1dp"
                    style="@style/card_style"
                    tools:ignore="MissingPrefix">
                    <LinearLayout android:layout_marginLeft="10dp"
                        android:layout_width="match_parent" android:orientation="vertical" android:layout_marginRight="10dp" android:paddingTop="10dp" android:paddingBottom="10dp"
                        android:layout_height="wrap_content" android:background="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent" android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp" android:layout_gravity="left" android:layout_weight="1"
                                android:layout_height="wrap_content" style="@style/text_normal_11dp"
                                android:id="@+id/txt_receiver_name" android:text="me" android:layout_marginRight="10dp"
                                android:textColor="@color/light_grey"/>
                            <TextView
                                android:layout_width="wrap_content" android:layout_gravity="left"
                                android:layout_height="wrap_content" style="@style/text_normal_11dp"
                                android:id="@+id/txt_receiver_time" android:text="1 hour ago"
                                android:textColor="@color/light_grey"/>
                        </LinearLayout>
                        <TextView android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                            android:layout_width="match_parent" style="@style/text_normal_14dp" android:text="Consectetur adipising elit do sed?"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp" android:id="@+id/card_chat_image_download_views_receiver"
                    card_view:cardCornerRadius="1dp"
                    style="@style/card_style"
                    tools:ignore="MissingPrefix">
                    <LinearLayout
                        android:layout_width="match_parent" android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView android:src="@mipmap/dummy"
                            android:padding="10dp"
                            android:layout_width="match_parent" android:id="@+id/img_chat_sent_image_receiver" android:adjustViewBounds="true"
                            android:layout_height="wrap_content" android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="match_parent" android:text="Lorem Ipsum (3.01 MB)" android:padding="5dp" android:id="@+id/txt_receiver_sent_image_caption"
                            android:layout_height="wrap_content" style="@style/text_normal_14dp" android:textColor="@color/dark_orange"/>
                        <ImageView android:layout_marginTop="10dp"
                            android:layout_width="match_parent" android:background="@color/grey"
                            android:layout_height="1dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:orientation="horizontal">
                            <LinearLayout android:padding="4dp"
                                android:layout_width="0dp" android:layout_weight="1" android:gravity="center"
                                android:layout_height="wrap_content" android:id="@+id/lnr_chat_download_image_receiver">
                                <ImageView
                                    android:layout_width="18dp" android:background="@mipmap/ic_get_app_black_24dp"
                                    android:layout_height="18dp" android:id="@+id/img_icon_download_receiver"/>
                                <TextView
                                    android:layout_width="wrap_content" android:layout_marginLeft="7dp"
                                    android:layout_height="wrap_content" android:text="@string/download"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="1dp" android:background="@color/grey"
                                android:layout_height="match_parent" />
                            <LinearLayout android:gravity="center" android:padding="4dp"
                                android:layout_width="0dp" android:layout_weight="1"
                                android:layout_height="wrap_content" android:id="@+id/lnr_chat_view_image_receiver">
                                <ImageView
                                    android:layout_width="18dp" android:background="@mipmap/ic_visibility_black_24dp"
                                    android:layout_height="18dp" android:id="@+id/img_icon_view_receiver"/>
                                <TextView android:layout_marginLeft="7dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:text="@string/view"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout></android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>