<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/chat_sender_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chat_user_image"
                android:layout_width="@dimen/img_width_height"
                android:layout_height="@dimen/img_width_height"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  android:background="@mipmap/left"
                android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                       >

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" android:padding="5dp">

                            <TextView
                                android:id="@+id/txt_sender_name"
                                style="@style/text_normal_11dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:text="Adam"
                                android:textColor="@color/light_grey" />

                            <TextView
                                android:id="@+id/txt_sender_time"
                                style="@style/text_normal_11dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="1 hour ago"
                                android:textColor="@color/light_grey" />
                        </LinearLayout>

                        <TextView
                            style="@style/text_normal_14dp"
                            android:layout_width="match_parent" android:id="@+id/txt_chat_recieved"
                            android:layout_height="wrap_content" android:textColor="@color/chat_text"
                            android:layout_marginBottom="10dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:text="Consectetur adipising elit do sed?" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_chat_sent_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/dummy" />

                        <TextView
                            android:id="@+id/txt_sender_sent_image_caption"
                            style="@style/text_normal_11dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Lorem Ipsum (3.01 MB)"
                            android:textColor="@color/dark_orange" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lnr_chat_download_image"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="4dp">

                                <ImageView
                                    android:id="@+id/img_icon_download"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:background="@mipmap/ic_get_app_black_24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:text="@string/download" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey" />

                            <LinearLayout
                                android:id="@+id/lnr_chat_view_image"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="4dp">

                                <ImageView
                                    android:id="@+id/img_icon_view"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:background="@mipmap/ic_visibility_black_24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:text="@string/view" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/chat_receiver_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"   android:background="@mipmap/right"
                android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent" android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_receiver_name"
                                style="@style/text_normal_11dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:text="me"
                                android:textColor="@color/light_grey" />

                            <TextView
                                android:id="@+id/txt_receiver_time"
                                style="@style/text_normal_11dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="1 hour ago"
                                android:textColor="@color/light_grey" />
                        </LinearLayout>

                        <TextView
                            style="@style/text_normal_14dp" android:id="@+id/txt_chat_sent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
android:textColor="@color/chat_text"
                            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                            android:text="Consectetur adipising elit do sed?" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_chat_sent_image_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/dummy" />

                        <TextView
                            android:id="@+id/txt_receiver_sent_image_caption"
                            style="@style/text_normal_11dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Lorem Ipsum (3.01 MB)"
                            android:textColor="@color/dark_orange" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lnr_chat_download_image_receiver"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="4dp">

                                <ImageView
                                    android:id="@+id/img_icon_download_receiver"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:background="@mipmap/ic_get_app_black_24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:text="@string/download" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey" />

                            <LinearLayout
                                android:id="@+id/lnr_chat_view_image_receiver"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="4dp">

                                <ImageView
                                    android:id="@+id/img_icon_view_receiver"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:background="@mipmap/ic_visibility_black_24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:text="@string/view" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>